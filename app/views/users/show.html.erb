<!-- ユーザープロフィール -->
<div class="profile-container">
    <h3 class="profile-name"><%= @user.name %></h3>
    <%= image_tag('sample-author1.jpg', class: "img-circle pull-left profile-thumb", style: "width: 100px; height: 100px; margin-top: 20px;") %>
</div>

<!-- 新規投稿 -->
<h2>New book</h2>
<%= form_for @book do |f| %>

	<%= render 'layouts/error_messages' %>

	<div class="field">
	<label>Title</label>
	<%= f.text_field :title %>
	</div>

	<div class="field">
	<label>Opinion</label>
	<%= f.text_area :body %>
	</div>

	<div class="field">
	<%= f.submit 'Create Book' %>
	</div>

<% end %>

<!-- 投稿一覧 -->
<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td>
				<%= link_to "Show", book_path(book.id) %>
				<%= link_to "Edit", edit_book_path(book.id) %>
				<%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: "Are you sure？" } %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>