<p id="notice"><%=  notice %></p>

<div class="container">
	<div class="row">

		<div class="col-lg-3" >

<!-- ユーザープロフィール -->
<div class="profile-container">
<%= render 'users/user_info' %>
</div>

<!-- 新規投稿 -->
<div class="row">
<%= render 'books/new_book' %>
</div>

		</div>

		<div class="col-lg-9">

<!-- 投稿一覧 -->
<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
			<td><%= link_to book.title, book_path(book.id) %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>

		</div>

	</div>
</div>