<div class='body'>
<div class="container">
	<p id="notice"><%=  notice %></p>

	<div class="row">

		<div class="col-xs-3" >

<!-- ユーザープロフィール -->
<div class="profile-container">
<%= render 'users/user_info' %>
</div>

<!-- 新規投稿 -->
<div class="row">
<%= render 'books/new_book' %>
</div>

		</div>

		<div class="col-xs-9">

<!-- 投稿一覧 -->
<h1>Books</h1>

<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @user.books.each do |book| %>
		<tr>
			<td><%= attachment_image_tag @user, :profile_image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
			
			<td><%= link_to book.title, book_path(book.id) %></td>
			<td><%= book.body %></td>
<!-- コメントカウント -->
			<td><p class="comment-count"><%= @book.post_comments.count %>件コメント</p>
  			</td>
<!-- コメントカウント -->
		</tr>
		<% end %>
	</tbody>
</table>

		</div>

	</div>
</div>
</div>