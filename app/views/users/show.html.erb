<div class="container">
	<div class="row">

		<div class="col-lg-4" >

<!-- ユーザープロフィール -->
<div class="profile-container">
	<h2>User info</h2>
    <h3 class="profile-name"><%= @name %></h3>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
    <% if @user.id == current_user.id %>
        <p><%= link_to "edit", edit_user_path(@user), class: "pull-right" %><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></p>
    <% end %>
</div>

<!-- 新規投稿 -->
<h2>New book</h2>
<%= form_for @book do |f| %>

	<%= render 'layouts/error_messages' %>

	<div class="field">
	<label>Title</label>
	<%= f.text_field :title %>
	</div>

	<div class="field">
	<label>Opinion</label>
	<%= f.text_area :body %>
	</div>

	<div class="field">
	<%= f.submit 'Create Book' %>
	</div>

<% end %>

		</div>

		<div class="col-lg-8">

<!-- 投稿一覧 -->
<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td>
			    <% if @book.user == current_user %>
					<%= link_to "Show", book_path(book.id) %>
					<%= link_to "Edit", edit_book_path(book.id) %>
					<%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: "Are you sure？" } %>
				<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

		</div>

	</div>
</div>