<div class=body>
<div class="container">
      <div class="row">

      	<div class="col-xs-3" >

<!-- ユーザープロフィール -->
<div class="profile-container">
<%= render 'users/user_info' %>
</div>

<!-- 新規投稿 -->
<div class="row">
<%= render 'books/new_book' %>
</div>

		</div>

		<div class="col-xs-9">

<!-- ユーザー一覧 -->
<h1>Users</h1>
<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= user.profile_image %></td>
			<td><%= user.name %></td>
			<td><%= link_to "Show", user_path(user.id) %></td>
		</tr>
		<% end %>
	</tbody>
</table>

		</div>

</div>
</div>
</div>