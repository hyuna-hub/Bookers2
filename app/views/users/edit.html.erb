<h2>User info</h2>

<%= render 'layouts/error_user' %>

<%= form_for(current_user) do |f| %>
   	<div class="form-group">
    	<p>Name</p>
    	<%= f.text_field :name %>
	</div>

	<div class="form-group">
    	<p>Image</p>
    	<%= f.attachment_field :profile_image %>
    </div>

    <div class="form-group">
    	<p>Introduction</p>
    	<%= f.text_area :introduction %>
	</div>

    <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>