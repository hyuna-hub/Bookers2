<div class='body'>
    <div class='container'>


<h2>User info</h2>

<%= render 'layouts/error_user' %>

<%= form_for(current_user) do |f| %>
   	<div class="form-group">
    	<label for="user_name">Name</label>
    	<%= f.text_field :name, class:"form-control", id:"inputEmail", placeholder:"name" %>
	</div>

	<div class="form-group">
    	<label for="user_image">Image</label>
    	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    </div>

    <div class="form-group">
    	<label for="user_introduction">Introduction</label>
    	<%= f.text_area :introduction, class:"form-control", id:"inputEmail", placeholder:"introduction" %>
	</div>

    <div class="actions">
        <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
    </div>
<% end %>

    </div>
</div>