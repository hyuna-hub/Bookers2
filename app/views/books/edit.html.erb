<h1>Editing Book</h1>

<% @book = Book.find(params[:id]) unless @Book %>
<%= form_for @book do |f| %>

<%= render 'layouts/error_messages' %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Update Book' %>

<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path(@book) %>
<% end %>