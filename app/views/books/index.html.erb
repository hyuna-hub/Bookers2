<%= render 'layouts/error_messages' %>

<div class='body'>
<div class="container">

      <div class="row">
      	<div class="col-xs-3" >

<!-- ユーザープロフィール -->
<div class="profile-container">
<%= render 'users/user_info' %>
</div>

<!-- 新規投稿 -->
<div class="row">
<%= render 'books/new_book' %>
</div>

		</div>

		<div class="col-xs-9">

<!-- 投稿一覧 -->
<h2>Books</h2>
<table class="table">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
				<%= attachment_image_tag @user, :profile_image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
				<%= link_to @name, user_path(book.user_id) %>
			</td>
			<td><%= link_to book.title, book_path(book.id) %></td>
			<td><%= book.body %></td>
<!-- いいね！ -->
			<td>
				<% if @book.favorited_by?(current_user) %>
  					<li>
    					<%= link_to book_favorites_path(@book), method: :delete do %>
      						<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      						<%= @book.favorites.count %> いいね
    					<% end %>
  					</li>
				<% else %>
  					<li>
    					<%= link_to favorites_path(@book), method: :post do %>
      						<span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
      						<%= @book.favorites.count %> いいね
    					<% end %>
  					</li>
				<% end %>
			</td>
<!-- コメントカウント -->
			<td><p class="comment-count"><%= @book.book_comments.count %>件コメント</p>
  			</td>
<!-- コメントカウント -->
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

		</div>

</div>
</div>
</div>