<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td>
				<%= link_to "Show", book_path(book.id) %>
				<%= link_to "Edit", edit_book_path(book.id) %>
				<%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: "Are you sureï¼Ÿ" } %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<h2>New book</h2>
<%= form_for @book do |f| %>

	<%= render 'layouts/error_messages' %>

	<div class="field">
	<label>Title</label>
	<%= f.text_field :title %>
	</div>

	<div class="field">
	<label>Body</label>
	<%= f.text_area :body %>
	</div>

	<div class="field">
	<%= f.submit 'Create Book' %>
	</div>

<% end %>
