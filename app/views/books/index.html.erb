<div class="container">
      <div class="row">

      	<div class="col-lg-3" >

<!-- ユーザープロフィール -->
<div class="profile-container">
	<h2>User info</h2>
    <h3 class="profile-name"><%= @name %></h3>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
    <% if @user.id == current_user.id %>
        <p><%= link_to "edit", edit_user_path(@user), class: "pull-right" %></p>
    <% end %>
</div>

<!-- 新規投稿 -->
<div class="row">
<h2>New book</h2>
<%= form_for @book do |f| %>

	<%= render 'layouts/error_messages' %>

	<div class="field">
	<label>Title</label>
	<%= f.text_field :title %>
	</div>

	<div class="field">
	<label>Opinion</label>
	<%= f.text_area :body %>
	</div>

	<div class="field">
	<%= f.submit 'Create Book' %>
	</div>

<% end %>
</div>

		</div>

		<div class="col-lg-9">

<!-- 投稿一覧 -->
<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= link_to book.title, book_path(book.id) %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>

		</div>

</div>
</div>