<div class="container">
	<div class="row">

		<div class="col-xs-3" >


<!-- 投稿ユーザーのプロフィール -->
<div class="profile-container">
<%= render 'users/user_info' %>
</div>

<!-- 新規投稿 -->
<div class="row">
<%= render 'books/new_book' %>
</div>

		</div>

		<div class="col-xs-9">

<!-- 投稿の詳細 -->
<p id="notice"><%=  notice %></p>

<h1><strong>Book detail</strong></h1>

<table>
	<thead>
		<tr>
			<th></th>
			<th><strong>Title</strong></th>

			<th><strong>Opinion</strong></th>
		</tr>
	</thead>

	<tbody>
		<tr>
			<td><%= link_to attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
			<td><%= link_to @book.title, book_path(@book.id) %></td>
			<td><%= @book.body %></td>
			<td>
			    <% if @book.user == current_user %>
					<%= link_to "Edit", edit_book_path(@book.id) %>
					<%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: "Are you sure？" } %>
				<% end %>
			</td>
		</tr>
	</tbody>
</table>

		</div>

</div>
</div>