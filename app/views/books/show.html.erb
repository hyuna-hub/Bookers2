<div class="container">
	<div class="row">

		<div class="col-xs-3" >


<!-- 投稿ユーザーのプロフィール -->
<div class="profile-container">
<%= render 'users/user_info' %>
</div>

<!-- 新規投稿 -->
<div class="row">
<%= render 'books/new_book' %>
</div>

		</div>

		<div class="col-xs-9">

<!-- 投稿の詳細 -->
<p id="notice"><%=  notice %></p>

<h2>Book detail</h2>

<table class="table">
	<tbody>
		<tr>
			<td><%= link_to attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
				<%= link_to @user.name, user_path(@user.id) %>
			</td>
			<td><%= link_to @book.title, book_path(@book.id) %></td>
			<td><%= @book.body %></td>
			<td>
			    <% if @book.user == current_user %>
			    <button type="button" class="btn btn-success">
					<%= link_to "Edit", edit_book_path(@book.id) %>
				</button>
				<button type="button" class="btn btn-danger">
					<%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: "Are you sure？" } %>
				</button>
				<% end %>
			</td>
<!-- いいね！ -->
			<td>
				<% if @book.favorited_by?(current_user) %>
  					<li>
    					<%= link_to favorites_path(@book), method: :delete do %>
      						<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      						<%= @book.favorites.count %> いいね
    					<% end %>
  					</li>
				<% else %>
  					<li>
    					<%= link_to favorites_path(@book), method: :post do %>
      						<i class="fa fa-heart-o" aria-hidden="true"></i>
      						<%= @book.favorites.count %> いいね
    					<% end %>
  					</li>
				<% end %>
			</td>
<!-- コメントカウント -->
			<td>
        		<p class="comment-count"><%= @book.book_comments.count %>件コメント</p>
  			</td>
<!-- コメントカウント -->
		</tr>
		<tr>
    		<% @book.book_comments.each do |book_comment| %>
        	<li class="comment">
            <div class="comment-body bb">
                <div class="comment-avatar">
                    <div class="avatar">
                        <%= image_tag(book_comment.user, style: "width: 60px; height: 60px;") %>
                    </div>
                </div>
                <div class="comment-text">
                    <div class="comment-author clearfix">
                        <a href="#" class="link-author"><%= book_comment.user.name %></a>
                        <span class="comment-meta">
                          <span class="comment-date"><%= book_comment.created_at.strftime('%Y/%m/%d') %></span>
                        </span>
                    </div>
                    <div class="comment-entry"><%= book_comment.comment %></div>
                </div>
            </div>
        	</li>
    		<% end %>
		</tr>
<!-- コメント -->
		<tr>
			<%= form_for [@book_comment] do |f| %>
            	<%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
    			<%= f.submit "送信", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
			<% end %>
		</tr>
<!--  -->
	</tbody>
</table>

		</div>

</div>
</div>