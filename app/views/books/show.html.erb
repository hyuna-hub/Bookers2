<div class="container">
	<div class="row">

		<div class="col-lg-4" >


<!-- 投稿ユーザーのプロフィール -->
<div class="profile-container">
    <h3 class="profile-name"><%= @user.name %></h3>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
    <% if @user.id == current_user.id %>
        <p><%= link_to "edit", edit_user_path(@user), class: "pull-right" %></p>
    <% end %>
</div>

<!-- 新規投稿 -->
<h2>New book</h2>
<%= form_for @book do |f| %>

	<%= render 'layouts/error_messages' %>

	<div class="field">
	<label>Title</label>
	<%= f.text_field :title %>
	</div>

	<div class="field">
	<label>Opinion</label>
	<%= f.text_area :body %>
	</div>

	<div class="field">
	<%= f.submit 'Create Book' %>
	</div>

<% end %>

		</div>

		<div class="col-lg-8">

<!-- 投稿の詳細 -->
<p id="notice"><%=  notice %></p>

<p><strong>Title:</strong><%= @book.title %></p>

<p><strong>Body:</strong><%= @book.body %></p>

		</div>

</div>
</div>